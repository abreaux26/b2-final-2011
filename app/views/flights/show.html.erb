<h1>Number: <%= @flight.number %></h1>
<h2>Date: <%= @flight.date %></h2>
<h2>Time: <%= @flight.time %></h2>
<h2>Departure City: <%= @flight.departure_city %></h2>
<h2>Arrival City: <%= @flight.arrival_city %></h2>

<h3>Adult Passengers:</h3>
<section class="adult-passengers">
  <% @adult_passengers.each do |passenger| %>
    <li id="passenger-<%= passenger.id %>">
      <%= passenger.name %>
      <%= button_to "Remove Passenger", flight_passenger_path(@flight, passenger), method: :delete %>
    </li>
  <% end %>
</section>

<h3 class="average-age-adult-passengers">
  Average age of adult passengers: <%= @adult_passengers_avg_age %>
</h3>
